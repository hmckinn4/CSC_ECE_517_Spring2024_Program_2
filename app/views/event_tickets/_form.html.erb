<%= form_with(model: event_ticket) do |form| %>
  <% if event_ticket.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event_ticket.errors.count, "error") %> prohibited this event_ticket from being saved:</h2>
      <ul>
        <% event_ticket.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :attendee_id, style: "display: block" %>
    <%= form.collection_select :attendee_id, Attendee.all, :id, :name, { prompt: "Select an attendee" }, { class: "form-control" } %>
  </div>

  <div>
    <%= form.label :event_id, style: "display: block" %>
    <%= form.collection_select :event_id, Event.all, :id, :name, { prompt: "Select an event" }, { class: "form-control" } %>
  </div>

  <div>
    <%= form.label :confirmation_number, style: "display: block" %>
    <%= form.text_field :confirmation_number, value: SecureRandom.hex(10), readonly: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
